[package]
name = "{{project_name}}"
version = "{{project_version}}"
#description = ""
authors = [""]
edition = "2018"
license = "Apache-2.0"
{{#if create_interface}}
build = "build.rs"
{{/if}}

{{#if (or create_actor create_interface) }}
[lib]
crate-type = ["cdylib", "rlib"]
{{/if}}

[features]
default = []

[dependencies]
async-trait = "0.1"
futures = "0.3"
serde = { version = "1.0" , features = ["derive"] }
serde_json = "1.0"
serde_bytes = "0.11"
lazy_static = "1.4"
{{#if create_actor}}
http-server = { path = "../../../examples/http-server/gen/rust" }
{{/if}}

[dependencies.wasmbus-rpc]
version = "0.1"
path = "../../../rpc-rs"

[dev-dependencies]
base64 = "0.13"

{{#if create_interface}}
# build-dependencies needed for build.rs
[build-dependencies]
wasmcloud-weld-codegen = { version = "0.1", path = "../../../codegen" }
# TODO: omit path, make this use published crate
{{/if}}

{{#if create_actor}}
[profile.release]
# Optimize for small code size
opt-level = "s"
lto = true
{{/if}}
