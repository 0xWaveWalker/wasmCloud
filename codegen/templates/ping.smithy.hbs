namespace org.wasmcloud.example.ping

use org.wasmcloud.core#actorReceiver
use org.wasmcloud.core#providerReceiver
use org.wasmcloud.core#wasmbus

/// A Ponger service can receive a ping message and returns a pong response.
@actorReceiver
@providerReceiver
@wasmbus
service Ponger {
    version: "0.1",
    operations: [ Ping ]
}

/// A Ping takes a string and returns a string
operation Ping {
    input: String,
    output: String,
}

